{
    "name": "pdftools",
    "modules": [
    "poppler.json",
	{
	    "name": "perl",
	    "no-autogen": true,
	    "config-opts": [
		"-des",
		"-Duseshrplib"
	    ],
	    "build-options": {
		"cflags": "-fPIC",
		"ldflags": "-fpic",
		"prefix": "/app",
		"no-debuginfo": true
	    },
	    "cleanup": [
		"/man",
		"/lib/perl5/site_perl",
		"*.pod",
		"*.h"
	    ],
	    "sources": [
		{
		    "type": "archive",
		    "url": "https://www.cpan.org/src/5.0/perl-5.32.1.tar.gz",
		    "sha256": "03b693901cd8ae807231b1787798cf1f2e0b8a56218d07b7da44f784a7caeb2c"
		},
		{
		    "type": "script",
		    "dest-filename": "configure",
		    "commands": [
			"exec ./configure.gnu $@"
		    ]
		}
	    ]
	},

	{
	    "name": "pdf-tools",
	    "buildsystem" : "simple",
	    "build-commands" : ["cd server && CFLAGS=\"-fPIE\" ./autobuild",
				"cp server/epdfinfo /app/bin/"],
	    "sources": [
		{
		    "type": "archive",
		    "url": "https://github.com/politza/pdf-tools/archive/v0.90.tar.gz",
		    "sha256": "3840d71c112a820b91a336a913599865d96f35dd8cbdf3e8024e54f55ee75d24"
		}
	    ]
	}
    ]
}	
